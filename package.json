{
  "name": "claimapprovalsrv",
  "version": "1.0.0",
  "description": "A simple CAP project.",
  "repository": "<Add your repository here>",
  "license": "UNLICENSED",
  "private": true,
  "dependencies": {
    "@sap/cds": "~7",
    "express": "^4",
    "@sap/xssec": "^3",
    "passport": "^0",
    "hdb": "^0.19.0",
    "@sap/cds-odata-v2-adapter-proxy": "^1.9.21"

  },
  "devDependencies": {
    "@sap/ux-specification": "^1.108.6",
    "sqlite3": "^5.0.11",
    "rimraf": "^3.0.2"
  },
  "engines": {
    "node": "^18"
  },
  "scripts": {
    "start": "cds run",
    "mock": "cds watch --with-mocks",
    "build:cds": "cds build --production",
    "build:mta": "mbt build -t gen --mtar mta.tar",
    "deploy": "cf deploy gen/mta.tar",
    "start-watch": "cds watch --open launchpage.html?sap-ui-xx-viewCache=false",
    "deploy:mta": "npm run build:cds && npm run build:mta && npm run deploy"
  },
  "sapux": [
    "app/comcnhibtpwarrantyclaimsapproval",
    "app/comcnhibtpwarrantyclaimsreport",
    "app/comcnhibtpwarrantyclaimsrequestor"
  ],
  "eslintConfig": {
    "extends": "eslint:recommended",
    "env": {
      "es2020": true,
      "node": true,
      "jest": true,
      "mocha": true
    },
    "globals": {
      "SELECT": true,
      "INSERT": true,
      "UPDATE": true,
      "DELETE": true,
      "CREATE": true,
      "DROP": true,
      "CDL": true,
      "CQL": true,
      "CXL": true,
      "cds": true
    },
    "rules": {
      "no-console": "off",
      "require-atomic-updates": "off"
    }
  },
  "cds": {
    "requires": {
      "db": {
        "kind": "sql"
      },
      "[hybrid]": {
        "db": {
          "kind": "hana-cloud"
        }
      },
      "[production]": {
        "auth": "xsuaa",
        "db": {
          "kind": "hana-cloud"
        }
      }
    }
  }
}