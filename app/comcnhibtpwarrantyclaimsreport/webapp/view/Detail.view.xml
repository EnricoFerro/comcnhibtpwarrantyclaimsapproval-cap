                                    <ui:template>
                                        <Text text="{LocalModel>DecisionText} ({LocalModel>Decision})" wrapping="false" />
                                    </ui:template>
                                </ui:Column>
                                <ui:Column width="10em">
                                    <Label text="{i18n>srvPar}" />
                                    <ui:template>
                                        <Text text="{LocalModel>Service}" wrapping="false" />
                                    </ui:template>
                                </ui:Column>
                            </ui:columns>
                        </ui:Table>
                        </VBox>
                    </uxap:ObjectPageSubSection>
