                                        <Text text="{LocalModel>ItemType}" wrapping="false" />
                                    </ui:template>
                                </ui:Column>
                                <ui:Column width="12em">
                                    <Label text="{i18n>Detail_TBL_DefectVersion_Lbl_Matnr}" />
                                    <ui:template>
                                        <Text text="{LocalModel>Matnr} - {LocalModel>Maktx}" wrapping="false" />
