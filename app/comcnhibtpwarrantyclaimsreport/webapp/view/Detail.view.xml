                                    <Label text="{i18n>Detail_TBL_DefectVersion_Lbl_Warranty}" />
                                    <ui:template>
                                        <Text text="{LocalModel>Warranty}" wrapping="false" />
                                        <!--<Text text="{LocalModel>DefectCode}" wrapping="false" />-->
